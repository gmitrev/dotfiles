"hg7064

loadplugins '\.(js|penta)$'
group user

so ~/.pentadactyl/theme.penta
so ~/.pentadactyl/user.css

set maxitems=12

map -count -modes=n,v <C-j> -builtin <count><C-p>
map -count -modes=n,v <C-k> -builtin <count><C-n>
map -count -modes=n,v j -builtin <count>5j
map -count -modes=n,v k -builtin <count>5k
map -modes=n,v f -builtin F
map -modes=n,v F -builtin f

map -modes=n,v <C-d> -builtin d
map -count -modes=n,v d -builtin <C-d>
map -count -modes=n,v u -builtin <C-u>
map -count -modes=n,v <C-c> -builtin u

map l gt
map h gT

map D :tabdetach<CR>
map -modes=n,v c -builtin d

map -modes=n,v <C-h> :back<CR>
map -modes=n,v <C-l> :forward<CR>
map <C-g> :pageinfo<CR>

set hintkeys=qwedf
set hlfind
set titlestring=''
" vim: set ft=pentadactyl:

set defsearch=duckduckgo
